        var imageArray = ["foreward.png",
                          "gradient.png",
                          "next.png",
                          "next_hover.png",
                          "next_onclick.png",
                          "pause.png",
                          "pause_hover.png",
                          "pause_onclick.png",
                          "play.png",
                          "play_hover.png",
                          "play_onclick.png",
