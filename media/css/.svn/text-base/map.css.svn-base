

.maptales-marker{
    width: 33px;
    height: 38px;
    top: -38px;
    left: -16px;
    position: absolute;
    overflow: visible;
    background-image: url(../images/marker-s-bg.png);
    z-index: 1;
}

.selected .maptales-marker{
    background-image: url(../images/marker-s-h-bg.png);
}

.maptales-marker img{
    width: 25px;
    height: 25px;
}

.line-marker{
    width: 18px;
    height: 18px;
    top: -17px;
    left: -9px;
    position: absolute;
    overflow: visible;
    background-image: url(../images/mapitems/lineMarker.gif);
    z-index: 1;
    cursor: pointer;
}

.line-marker:hover .info-text{
    display: block;
    position: relative;
    text-align: left;
    left: 20px;
    top: -10px;
    background-color: #FFF;
    border: 1px solid #DDD;
}

.line-marker .info-text{
    display: none;
}

.line-start-marker{
    width: 18px;
    height: 18px;
    top: -17px;
    left: -9px;
    position: absolute;
    overflow: visible;
    background-image: url(../images/mapitems/marker-empty.gif);
    z-index: 1;
}


.line-end-marker{
    width: 18px;
    height: 18px;
    top: -17px;
    left: -9px;
    position: absolute;
    overflow: visible;
    background-image: url(../images/mapitems/marker-empty.gif);
    z-index: 1;
}


.marker-content img{
    position: absolute;
    top: -35px;
    left: -13px;
    z-index: 2;
    border: 1px solid #BBB;
    cursor: pointer;
}


.marker-drag-handle{
    width: 20px;
    height: 11px;
    background-image: url(../images/handle_h.png);
    position: absolute;
    top: -81px;
    right: -28px;
    cursor: move;
    z-index:2;
    height: 8px;
    border: 1px solid #999;

}

.draggable-placed{
    cursor: pointer;
}
